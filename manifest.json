{
  "manifest_version": 3,
  "name": "ConnectAI",
  "description": "Auto-message LinkedIn profiles and Twitter users, and comment on posts/tweets with Claude personas.",
  "version": "0.1.1",
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn AI Outreach"
  },
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://api.anthropic.com/*",
    "https://*.twitter.com/*",
    "https://www.twitter.com/*",
    "https://twitter.com/*",
    "https://x.com/*",
    "https://www.instagram.com/*",
    "https://*.instagram.com/*",
    "https://instagram.com/*"
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://linkedin.com/*",
        "https://*.twitter.com/*",
        "https://www.twitter.com/*",
        "https://twitter.com/*",
        "https://x.com/*",
        "https://www.instagram.com/*",
        "https://*.instagram.com/*",
        "https://instagram.com/*"
      ],
      "js": [
        "content.js"
      ],
      "world": "MAIN",
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "personas.json"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "128": "icons/128.jpg"
  }
}